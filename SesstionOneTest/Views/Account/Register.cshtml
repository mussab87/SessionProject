@model Service.DataLayer.ViewModels.RegisterViewModel
@{
    Layout = "~/Views/Shared/_LoginAndReg.cshtml";
    ViewBag.Title = "Register New User";
}


<form method="post">
    <div class="login-content">
        <!-- Login -->
        <div class="nk-block toggled" id="l-login">
            <div class="nk-form">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="input-group mg-t-15">
                    <label asp-for="Email" class="input-group-addon nk-ic-st-pro"><i class="notika-icon notika-mail"></i></label>
                    <div class="nk-int-st">
                        <input asp-for="Email" type="text" class="form-control" placeholder="Email Address">

                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="input-group mg-t-15">
                    <label asp-for="Password" class="input-group-addon nk-ic-st-pro"><i class="notika-icon notika-edit"></i></label>

                    <div class="nk-int-st">

                        <input asp-for="Password" class="form-control" placeholder="Password">

                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="input-group mg-t-15">
                    <label asp-for="ConfirmPassword" class="input-group-addon nk-ic-st-pro"><i class="notika-icon notika-edit"></i></label>

                    <div class="nk-int-st">
                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password">
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-login btn-success btn-float"><i class="notika-icon notika-right-arrow right-arrow-ant"></i></button>
            </div>

        </div>


    </div>
</form>


